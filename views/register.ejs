<% include ./Partial/Header.ejs %>

<div class="w-full h-screen bg-center bg-zinc-300  flex items-center justify-center">
    <div class="w-96  bg-white px-4 py-10 rounded-[30px]">
      <h1 class="text-4xl mb-10 leading-none tracking-tighter capitalize text-semibold text-zinc-700 flex items-center justify-center " >Create New Account</h1>
      <form action="/register" method="post">
        <input class=" border-2 rounded-md mt-2 block w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class=" border-2 rounded-md mt-2 block w-full px-3 py-2" type="text" name="fullname" placeholder="Fullname">
        <input class=" border-2 rounded-md mt-2 block w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class=" border-2 rounded-md mt-2 block w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class=" border-2 rounded-md mt-2 block w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <a class="mt-2 font-semibold text-zinc-900 inline-block"   href="#">Forgot the Password ?</a>
        <input class=" border-2 rounded-full mt-5 block w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge that you've read our Privacy Policy; Opens a new tab. Notice at collection; Opens a new tab.</p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-900 text-center w-full" href=/>Login Existing Account</a>
    </div>
  </div>
